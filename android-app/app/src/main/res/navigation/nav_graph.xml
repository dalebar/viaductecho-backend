<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Hub Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.viaductecho.android.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_articleListFragment"
            app:destination="@id/articleListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- Local News Section -->
    <fragment
        android:id="@+id/articleListFragment"
        android:name="com.viaductecho.android.ui.articles.ArticleListFragment"
        android:label="@string/articles_title"
        tools:layout="@layout/fragment_article_list">

        <action
            android:id="@+id/action_articleListFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.viaductecho.android.ui.articles.ArticleDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_article_detail">

        <argument
            android:name="articleId"
            app:argType="integer" />
    </fragment>

</navigation>
