<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@color/viaduct_echo_home_background"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp"
        android:fitsSystemWindows="true">

        <!-- Welcome Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:gravity="center">

            <!-- App Logo/Icon -->
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_launcher_home"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name" />

            <!-- Welcome Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_welcome_title"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp"
                android:textAlignment="center" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_welcome_subtitle"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Sections Grid -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="16dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:padding="16dp">

                <!-- Local News Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardLocalNews"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/md_theme_light_primaryContainer"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_newspaper"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/md_theme_light_primary"
                            android:contentDescription="Local News" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/section_local_news"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/md_theme_light_onPrimaryContainer"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Events Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEvents"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/md_theme_light_secondaryContainer"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_calendar"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/md_theme_light_secondary"
                            android:contentDescription="Events" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/section_events"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/md_theme_light_onSecondaryContainer"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coming_soon"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/md_theme_light_onSecondaryContainer"
                            android:alpha="0.7"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Business Directory Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBusinessDirectory"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="0dp"
                    app:cardBackgroundColor="@color/md_theme_light_tertiaryContainer"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_location_pin"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/md_theme_light_tertiary"
                            android:contentDescription="Attractions" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/section_attractions"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/md_theme_light_onTertiaryContainer"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coming_soon"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/md_theme_light_onTertiaryContainer"
                            android:alpha="0.7"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Offers Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOffers"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/viaduct_echo_background_light"
                    app:strokeColor="@color/viaduct_echo_accent_lime"
                    app:strokeWidth="2dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_tag"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/viaduct_echo_accent_lime"
                            android:contentDescription="Offers" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/section_offers"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coming_soon"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="@color/text_secondary"
                            android:alpha="0.7"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Contacts Section (spans both columns) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardContacts"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="@color/viaduct_echo_background_dark"
                    app:strokeColor="@color/viaduct_echo_arch_brown"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_book"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/viaduct_echo_arch_brown"
                            android:contentDescription="Directory" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/section_directory"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/coming_soon"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@android:color/white"
                                android:alpha="0.7"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Info Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_footer"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:alpha="0.8" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
