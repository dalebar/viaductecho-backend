# Core configuration
DATABASE_URL=postgresql://user:password@localhost:5432/viaduct_echo

# Optional: OpenAI + GitHub (if used)
# OPENAI_API_KEY=
# GITHUB_TOKEN=
# GITHUB_REPO=
# GITHUB_BRANCH=main

# API metadata (optional)
API_TITLE=Viaduct Echo API
API_VERSION=1.0.0
CORS_ORIGINS=*

# Pagination defaults (optional)
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# HTTP client timeout in seconds (optional)
# Leave empty to preserve legacy behavior (no timeout)
# Set e.g. 10 for a 10-second timeout on outbound requests
HTTP_TIMEOUT=

# Skiddle API (for events aggregation)
SKIDDLE_API_KEY=your_skiddle_api_key_here

# Events Configuration
EVENTS_LATITUDE=53.4106
EVENTS_LONGITUDE=-2.1575
EVENTS_RADIUS_MILES=10
EVENTS_FETCH_DAYS_AHEAD=60

# Admin API Key (for manual event entry)
ADMIN_API_KEY=generate-a-secure-key-here
